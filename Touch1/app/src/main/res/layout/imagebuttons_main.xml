<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_pink_d"
        android:background="@drawable/res_sticky1"
        android:alpha="0.8"

        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_green_d"
        android:background="@drawable/res_sticky2"
        android:alpha="0.8"

        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_orange_d"
        android:background="@drawable/res_sticky3"
        android:alpha="0.8"

        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_blue_d"
        android:background="@drawable/res_sticky4"
        android:alpha="0.8"

        />

</LinearLayout>